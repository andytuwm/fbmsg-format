{
  "manifest_version": 2,
  "author": "Andy Tu",
  "name": "fbmsg-format",
  "short_name": "fbmsg-format",
  "description": "Enable HTML formatting in Facebook messages through markdown syntax",
  "version": "0.3.1",
  "minimum_chrome_version": "38",

  "icons": {
    "16": "assets/icon_16.png",
    "128": "assets/icon_128.png"
  },

  "content_scripts": [{
    "all_frames": true,
    "matches": ["*://facebook.com/*", "*://*.facebook.com/*"],
    "js": ["jquery-2.1.3.min.js","fbformat.js"]
  }]
}